<html>
<body>
  <title>Discussion Sections</title>
  
    <div class="container">
      
      <h1>Discussion Sections</h1>
      <br>
      
      <table class="table table-striped table-hover">
        <theader>
          <th>CRN</th>
          <th>Discussion Times</th>
          <th>Seats Open</th>
        </theader>
          
        <% @discussions.each do |d| %>
          <tr>
            <!--<td>%= check_box_tag "select[#{d.id}]", d.id %></td>-->
            <td><%= d.number %></td>
            <td><%= "#{d.day} #{d.time}" %></td>
            <td><%= d.capacity %></td>
          </tr>
        <% end %>
      </table>
      
      
      <div class="btn-group", style="display:inline-block; width=100%">
        <%= button_to "Back", '/', {method: :get, class: "btn btn-primary"} %>
      </div>
      
       <% if session[:is_admin] %>
        <div class='btn-toolbar pull-right'>
          <div class='btn-group', style="display:inline-block">
           <%= link_to "Add", new_discussion_path, {method: :get, class: "btn btn-success"} %>
           <%= link_to "Edit", edit_discussion_index_path, {method: :get, class: "btn btn-info"} %>
          </div>
        </div>
     <% end %>
      
      
    </div>
    
</body>
</html>

<style>
  .divider{
    width:5px;
    height:auto;
    display:inline-block;
}
</style>