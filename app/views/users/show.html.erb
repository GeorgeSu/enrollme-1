<body>
  <title>Student Information</title>
    <div class="container">

        <div class = "col-sm-4">
  
        <h2><%= @user.name %></h2>
        
        
        <%= image_tag @user.avatar.url(:medium), :class=>"img-rounded img-responsive"%>
        
        <br>
        <h5><span class="info_category"><i class="fa fa-envelope fa-2x" aria-hidden="true"></i>&nbsp;</span><a href="mailto:<%= @user.email %>"><%= @user.email %></a> </h5>
        <hr class="custom_hr">
        
        <!--Don't show SID if you are not that student-->
        <% if @user.id == session[:user_id] %>
            <h5><span class="info_category">SID:&nbsp;</span>
              <p><%= @user.sid %></p></h5>
            <hr class="custom_hr">
        <% end %>
        
        <h5><span class="info_category">Major:&nbsp;</span>
          <p><%= @user.major %></p></h5>
        <hr class="custom_hr">
        <h5><span class="info_category">On Waitlist?&nbsp;</span>
          <p><%= @user.waitlisted ? "Yes" : "No" %></p></h5>
        <hr class="custom_hr">
        
        <h5><span class="info_category">Team ID:&nbsp;</span>
            <%= link_to @user.team_id, team_profile_path(@user.team_id), class: "btn btn-info btn-xs" %></h5>
        
        <hr class="custom_hr">
        <h5><span class="info_category">Bio:&nbsp;</span>
          <p><%= @user.bio.nil? ? "None" : @user.bio %></p></h5>
        <hr class="custom_hr">
        <h5><span class="info_category">Time Commitment:&nbsp;</span>
          <p><%= @user.time_commitment.nil? ? "None" : @user.time_commitment %></p></h5>
        <hr class="custom_hr">
        
        
       <h5><span class="info_category">Available Days:&nbsp;</span></h5>
       <label for="sunday" class="btn-circle" style="<%= "background-color:#ededed; color:#c6c6c6;" if !@availableDays.include? "Sunday"%>"><%= 'Sun' %></label>
       <label for="monday" class="btn-circle" style="<%= "background-color:#ededed; color:#c6c6c6;" unless @availableDays.include? "Monday"%>"><%= 'Mon' %></label>
       <label for="tuesday" class="btn-circle" style="<%= "background-color:#ededed; color:#c6c6c6;" unless @availableDays.include? "Tuesday"%>"><%= 'Tue' %></label>
       <label for="wednesday" class="btn-circle" style="<%= "background-color:#ededed; color:#c6c6c6;" unless @availableDays.include? "Wednesday"%>"><%= 'Wed' %></label>
       <label for="thursday" class="btn-circle" style="<%= "background-color:#ededed; color:#c6c6c6;" unless @availableDays.include? "Thursday"%>"><%= 'Thu' %></label>
       <label for="friday" class="btn-circle" style="<%= "background-color:#ededed; color:#c6c6c6;" unless @availableDays.include? "Friday"%>"><%= 'Fri' %></label>
       <label for="saturday" class="btn-circle" style="<%= "background-color:#ededed; color:#c6c6c6;" unless @availableDays.include? "Saturday"%>"><%= 'Sat' %></label>       
       
       <hr class="custom_hr">
        <h5><span class="info_category">Experience:&nbsp;</span>
          <p><%= @user.experience.nil? ? "None" : @user.experience %></p></h5>
        <hr class="custom_hr">
        
    
       <h5><span class="info_category">Skills:&nbsp;</span></h5>
       <% if @skills.include? "Ruby" %> <button type="button" class="btn btn-success btn-xs">Ruby On Rails</button> <% end %>
       <% if @skills.include? "Design" %><button type="button" class="btn btn-info btn-xs">Ui Design</button><% end %>
       <% if @skills.include? "Frontend" %><button type="button" class="btn btn-warning btn-xs">Frontend</button><% end %>
       <% if @skills.include? "Backend" %><button type="button" class="btn btn-primary btn-xs">Other Backend</button><% end %>
       <% if @skills.include? "Management" %><button type="button" class="btn btn-danger btn-xs">Team Management</button><% end %>
       
       <hr class="custom_hr"> 
        <h5><span class="info_category"><i class="fa fa-facebook-square fa-2x" aria-hidden="true" ></i>&nbsp;</span><a href="<%= @user.facebook %>" ><%= @user.facebook %></a>
            <span class="info_category"><i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i>&nbsp;</span><a href="<%= @user.linkedin %>"> </a><%= @user.linkedin %></a></h5>
        <hr class="custom_hr">
        <h5><span class="info_category">Resume:&nbsp;</span><%= link_to "#{@user.document_file_name}", @user.document.url ,:target => "_block" %></h5>
        <hr class="custom_hr">


        <%= link_to "Back", '#', onclick: "history.back()", class: 'btn btn-primary' %>
        <% if @user.id == session[:user_id] %>
           <%= link_to "Edit", edit_user_path(params[:id]), {class: 'btn btn-primary', :method => 'get'} %>
         <% end %>    
         </div>
    <div class="col-sm-8">
      <br>
      <br>
      <br>

    <embed width="100%" height="100%" src="<%= @user.document.url%>" type="application/pdf"></embed>
        </div>
        </div>
    </div>
</body>



<style>
    h2 {
        margin-top: 2px;
    }
    /*h5 span + * {*/
    /*    float: right;*/
    /*}*/
    
</style>