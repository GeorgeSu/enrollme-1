<h2>Recommended for you!</h2>
<div id="myCarousel" class="carousel slide " data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= render partial: "team/pane", :object => @suggested_team %>
    </div>

    <div class="item">
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" style="width: 5%" href="#myCarousel" data-slide="prev" id = "prev">
    <span class="glyphicon fa fa-chevron-circle-left fa-2x" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" style="width: 5%" href="#myCarousel" data-slide="next" id = "next">
    <span class="glyphicon fa fa-chevron-circle-right fa-2x" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
