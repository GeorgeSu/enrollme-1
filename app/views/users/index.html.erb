<body>
	<title>User list</title>
	<div class="container">
	<div class="row">

		<h1>Users</h1>

		<br>
		<%= form_tag(team_list_path, :method => "get", id: "user_search_form", class: "input-group col-xs-5") do %>
        	<%= text_field_tag :user_search, params[:search], placeholder: "Search for a User", class: "form-control input-sm", type: "search" %>
     	<% end %>


		<br><br>

		<table id="individuals" class="table table-striped table-hover">
			<thead>
				<tr>
					<th>
						<%= link_to 'User', users_path(:users_sort => 'users_name'), :id => 'users_name_header' %>
					</th>
					
					<th>
						<%= link_to 'Team ID', users_path(:users_sort => 'team_id'), :id => 'team_id_header' %>
					</th>
				</tr>

			</thead>

			<tbody>
			  <% @users.each do |user| %>
			  	<!-- don't display the user -->
			  	<% next if user.id == session[:user_id] %>
			    <tr>
			    	<td>
				    	<%= link_to user.name, user_path(user.id) %>
			    	</td> 

			    	<td> 
			    	<% if !user.team_id.nil? %>
							<%= link_to user.team_id, team_profile_path(user.team_id) %> 
						<% end %>

						</td>


			    	
			  	</tr>
			  <% end %>
		        
		  </tbody>

		</table>
		
		
		</div>

	</div>

</body>
